@model IEnumerable<Digital_Design.Models.ToDo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Create</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToDoTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDoDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToDoId" type="button" class="btn btn-success">Edit</a>

                <a asp-action="Details" asp-route-id="@item.ToDoId" type="button" class="btn btn-warning">Details</a>

                    <a asp-action="Delete" asp-route-id="@item.ToDoId" type="button" class="btn btn-danger">Delete</a>
    
            </td>
        </tr>
}
    </tbody>
</table>
