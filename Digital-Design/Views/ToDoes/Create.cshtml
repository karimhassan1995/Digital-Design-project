@model Digital_Design.Models.ToDo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ToDo</h4>
<hr />
<div class="row body">
    <div class="col-md-4">
        <div class="x">
            <div>
                <form asp-action="Create" class="formc">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="forms">
                        <div class="form-group">
                            <label style="color:white;"  asp-for="ToDoTitle" class="control-label">ToDoTitle</label>
                            <input asp-for="ToDoTitle" class="form-control styleofinputs" />
                            <span asp-validation-for="ToDoTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label style="color:white;"  asp-for="ToDoDescription" class="control-label">ToDoDescription</label>
                            <input asp-for="ToDoDescription" class="form-control styleofinputs" />
                            <span asp-validation-for="ToDoDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="AppUserId" class="form-control" value='@ViewData["userid"]' type="hidden" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btnsubmit btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="createimg">
              @*  <img src="/Image/pexels-mart-production-7718678.jpg" width="400px" height="350px">*@
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btnsubmit btn-dark"  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
